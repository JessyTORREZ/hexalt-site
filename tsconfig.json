{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@lib/*": ["./lib/*"],
      "@styles/*": ["./styles/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@context/*": ["./context/*"],
      "@assets/*": ["./assets/*"],
      "@store/*": ["./store/*"],
      "@services/*": ["./services/*"],
      "@constants/*": ["./constants/*"],
      "@config/*": ["./config/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
